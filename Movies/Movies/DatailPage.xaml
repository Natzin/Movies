<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Movies.DatailPage">
    <ContentPage.Content>
        <StackLayout Padding="30,30,30,30">
            <StackLayout>
                <Label
                    x:Name="lbDescription"
                    Text="Descripcion: "
                    FontSize="20"
                    VerticalOptions="Center"
                    HorizontalOptions="FillAndExpand"/>
                <Label
                    x:Name="lbCategory"
                    Text="Categoria: "
                    FontSize="20"
                    VerticalOptions="Center"
                    HorizontalOptions="FillAndExpand"/>
                <Label
                    x:Name="lbRanking"
                    Text="Rangking: "
                    FontSize="20"
                    VerticalOptions="Center"
                    HorizontalOptions="FillAndExpand"/>
            </StackLayout>
            <StackLayout>
                <Image
                    x:Name="imImage"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="FillAndExpand"
                    WidthRequest="200"
                    HeightRequest="200"
                    BackgroundColor="Beige"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>